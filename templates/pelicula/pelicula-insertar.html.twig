{% extends 'base.html.twig' %}

{% block title %}Hello PeliculaController!{% endblock %}
{% block stylesheets%}{{ parent() }} {% endblock %}

{% block body %}
    <div class="container">
        <div class="formRegistro">
            <h1>Alta Pelicula</h1>
            {{ form_start(form) }}
                <div class="form-group">
                    {{ form_row(form.titulo) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.tipo) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.descripcion) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.foto) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.actores) }}
                </div>
                <div id="btnAltaPelicula">
                    {{ form_row(form.submit) }}
                </div>


            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}